<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= semantic_form_for(resource.with_address, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.semantic_errors %>
  <%= display_base_errors resource %>
  <%= f.inputs do %>
    <%= f.input :name, :autofocus => true %> 
    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
    <h3>more information</h3>
    <%= f.input :telephone, :required => false %>
    <%= f.input :mobile, :required => true %>
    <%= render :partial => "shared/address",:locals=>{ :f => f }  %>
    <h3> Tax information </h3>
    <%= f.input :vat_number, :required => false, hint: "For companies registered with HMRC and have VAT Number" %> 
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit %>
  <% end %>
<% end %>
<h3>Cancel my account</h3>
<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
<%= link_to "Back", :back %>
