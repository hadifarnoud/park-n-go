<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource.with_address, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name, :autofocus => true %> 
  <%= f.input :email, :required => true %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true %>
  <h3>more information</h3>
  <%= f.input :telephone, :required => false %>
  <%= f.input :mobile, :required => true %>
  <%= render :partial => "shared/address",:locals=>{ :f => f }  %>
  <h3> Tax information </h3>
  <%= f.input :vat_number, :required => false, hint: "For companies registered with HMRC and have VAT Number" %> 
  <%= f.button :submit, 'Update', :class => 'btn-primary' %>
<% end %>
<h3>Cancel my account</h3>
<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
<%= link_to "Back", :back %>
