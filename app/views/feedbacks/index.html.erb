<h1>Listing feedbacks</h1>

<table class="table table-striped">
  <tr>
    <th>Comment</th>
    <th>Rate</th>
    <th>Booking</th>
    <th>Actions</th>
  </tr>

<% @feedbacks.each do |feedback| %>
  <tr>
    <td><%= feedback.comment %></td>
    <td><%= feedback.raiting %>/5</td>
    <td><%= feedback.booking.user.name %></td>
    <td><%= link_to 'Show', feedback,:class => "btn btn-success" %> <%= link_to 'Edit', edit_feedback_path(feedback),:class => "btn btn-warning" %> <%= link_to 'Delete', feedback, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Feedback', new_feedback_path,:class => "btn btn-primary" %>
